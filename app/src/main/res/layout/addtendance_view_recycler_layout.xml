<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout android:id="@+id/monthViewCard"
    android:layout_below="@+id/monthSpinner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:background="@color/white"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_structure"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"
                />
            <RelativeLayout
                android:layout_toEndOf="@+id/profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                >

                <TextView
                    android:id="@+id/siteName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/roboto_medium"

                    android:text="_"
                    android:textSize="14sp" />
                <RelativeLayout
                    android:layout_below="@+id/siteName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

<!--                    <TextView-->
<!--                        android:id="@+id/empIdHeader"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_centerVertical="true"-->
<!--                        android:fontFamily="@font/roboto"-->
<!--                        android:text="emp id: "-->
<!--                        android:textSize="16sp" />-->

                    <TextView
                        android:id="@+id/dateValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColor="@color/grey"
                        android:layout_marginStart="2dp"

                        android:fontFamily="@font/roboto_medium_italic"

                        android:text="__"
                        android:textSize="12sp" />

                    <View
                        android:id="@+id/separator"
                        android:layout_toEndOf="@+id/dateValue"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_width="1dp"
                        android:layout_height="12sp"
                        android:background="@color/grey"
                        android:layout_centerVertical="true"
                        />

<!--                    <TextView-->
<!--                        android:id="@+id/hoursHeader"-->
<!--                        android:layout_toEndOf="@+id/separator"-->
<!--                        android:text="total hr:"-->
<!--                        android:textColor="@color/grey"-->
<!--                        android:textSize="12sp"-->
<!--                        android:layout_centerVertical="true"-->
<!--                        android:fontFamily="@font/roboto"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        />-->
                    <TextView
                        android:id="@+id/hoursValue"
                        android:layout_toEndOf="@+id/separator"
                        android:text="__"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/roboto_medium_italic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </RelativeLayout>
            </RelativeLayout>



        </RelativeLayout>

